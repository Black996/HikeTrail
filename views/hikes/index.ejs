<% layout("layouts/boilerplate") %>
    <div id="cluster-map">

    </div>
    <h1>All Hikes</h1>

    <ul>
        <% for (let hike of hikes) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(hike.images.length){ %>
                            <img class="img-fluid" src="<%= hike.images[0].url%>">
                            <% }else { %>
                                <img class="img-fluid"
                                    src="https://res.cloudinary.com/dbdhx6jfm/image/upload/v1613603645/HikeTrail/qhulbozmfz7z4l0whsyh.jpg">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=hike.trail%>
                            </h5>
                            <p class="card-text">
                                <%=hike.distance%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=hike.area%>
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    Difficulty: <%=hike.grade%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/hikes/<%= hike._id %>">View <%= hike.trail %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
                <script>
                    const mapToken = "<%-process.env.MAPBOX_TOKEN%>"
                    const hikes = { features: JSON.parse('<%-JSON.stringify(hikes)%>') }
                </script>
                <script src="/javascripts/clusterMap.js"></script>