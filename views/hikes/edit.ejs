<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center">Edit Hiking Trail</h1>
        <div class="col-md-6 offset-md-3 mb-3">
            <form action="/hikes/<%=hike._id%>?_method=PUT" method="POST" class="validated-form" novalidate
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="trail">Trail Name</label>
                    <input class="form-control" type="text" id="trail" name="hike[trail]" value="<%=hike.trail%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="area">Area</label>
                    <input class="form-control" type="text" name="hike[area]" id="area" value="<%=hike.area%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="grade">Difficulty Grade</label>
                    <input class="form-control" type="text" name="hike[grade]" id="grade" value="<%=hike.grade%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="distance">Distance</label>
                    <input class="form-control" type="number" name="hike[distance]" id="distance"
                        value="<%=hike.distance%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text" for="image">Add More Image(s)</label>
                </div>
                <div class="mb-3">
                    <% hike.images.forEach(function(img,i) {%>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            <label for="image-<%=i%>">Delete?</label>
                        </div>
                        <% }) %>
                </div>
                <label>Do you need a guide for this trail:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="hike[isGuided]" id="isGuidedTrue" value=true
                        required>
                    <label class="form-check-label" for="isGuidedTrue">
                        Yeah
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="hike[isGuided]" id="isGuidedtFlase" value=false
                        required>
                    <label class="form-check-label" for="isGuidedtFlase">
                        Nope
                    </label>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-info mb-3">Update Hiking Trail</button>
            </form>
            <a href="/hikes/<%= hike._id%> ">Back to All Trails</a>
        </div>
    </div>